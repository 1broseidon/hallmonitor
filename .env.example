# Hall Monitor Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Deployment Configuration
# ============================================================================

# Deployment mode: docker, kubernetes, standalone
DEPLOYMENT_MODE=docker

# ============================================================================
# Server Configuration
# ============================================================================

SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=json

# Log output: stdout, stderr, or file path
LOG_OUTPUT=stdout

# ============================================================================
# Metrics Configuration
# ============================================================================

METRICS_ENABLED=true
METRICS_PATH=/metrics
METRICS_INCLUDE_PROCESS=true
METRICS_INCLUDE_GO=true

# ============================================================================
# Monitoring Configuration
# ============================================================================

MONITORING_DEFAULT_INTERVAL=30s
MONITORING_DEFAULT_TIMEOUT=10s

# ============================================================================
# Kubernetes-specific Configuration
# ============================================================================

# These are typically set automatically by Kubernetes
POD_NAME=
POD_NAMESPACE=hallmonitor
NODE_NAME=

# ============================================================================
# Docker-specific Configuration
# ============================================================================

CONTAINER_NAME=hallmonitor

# ============================================================================
# Observability Stack (Docker Compose full mode)
# ============================================================================

# Grafana configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=hallmonitor

# Prometheus retention
PROMETHEUS_RETENTION=30d

# ============================================================================
# Application Configuration
# ============================================================================

# Path to configuration file
CONFIG_FILE=./config.yml

# Version (set automatically during build)
VERSION=dev
